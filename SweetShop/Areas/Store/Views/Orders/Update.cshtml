@model OrderDTO

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/order.css" />
<div class="wrapper">
    <div>
        <a asp-action="Index" class="btn btn-primary">Обратно към поръчки</a>
        <h1 class="text-center">Промяна на поръчка</h1>
    </div>
<div class="row">
        <div class="col-md-6 offset-md-3">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderedOn" class="control-label"></label>
                <input asp-for="OrderedOn" class="form-control" />
                <span asp-validation-for="OrderedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class="form-control">
                    @foreach (var client in ViewBag.Clients)
                    {
                        <option value="@client.Id">@client.FirstName  @client.LastName </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control">
                    @foreach (var client in ViewBag.Products)
                    {
                        <option value="@client.Id">@client.Name</option>
                    }
                </select>
            </div>
            <input type="hidden" asp-for="Id" />
           
            <div class="form-group">
                <input type="submit" value="Промени" class="btn btn-warning w-100 mx-auto" />
            </div>
        </form>
    </div>
</div>



</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
